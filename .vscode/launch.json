  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Chat Server Debugger",
      "address": "localhost",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}/chat-server",
      "remoteRoot": "/usr/src/app"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Api Debugger",
      "address": "localhost",
      "port": 9230,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/usr/src/app"
    }
  ]
}